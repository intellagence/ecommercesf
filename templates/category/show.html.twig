{% extends 'base.html.twig' %}

{% block h1 %}{{ category.name }}{% endblock %}

{% block body %}

    <a class="btn btn-primary" href="{{ path('app_category_index') }}">Gestion des catégories</a>

    <table class="table table-striped table-hover table-bordered text-center mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            
                    
        </tbody>
    </table>

    {% if category.products|length > 0 %}
    
        <table class="table table-striped table-hover table-bordered text-center mt-4">
            <thead class="table-warning">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Prix (€)</th>
                </tr>
            </thead>

            <tbody>

                {% for product in category.products %}
                    <tr class="align-middle">
                        <td>{{ product.id }}</td>
                        <td>{{ product.title|capitalize }}</td>
                        <td>{{ product.price }}</td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    
    {% endif %}

{% endblock %}
