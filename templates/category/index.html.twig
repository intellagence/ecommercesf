{% extends 'base.html.twig' %}

{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}
    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Ajouter</a>

    <table class="table table-striped table-hover table-bordered text-center mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantité</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="align-middle">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.products|length }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">
                        {{ ux_icon('lucide:file', {class : 'text-warning icon'}) }}
                    </a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">
                        {{ ux_icon('lucide:edit', {class : 'text-info icon'}) }}
                    </a>

                    {{ include('category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
